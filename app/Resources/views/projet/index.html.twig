{% extends 'base.html.twig' %}

{% block body %}

	<h1>Welcome {{ app.user.username }}</h1>
	{% for room in rooms %}	
	<h2 class="page-header">{{room.name}} - room #{{room.id}} <a href="/projetsymfo/web/app_dev.php/projet/editroom/{{room.id}}" class="btn btn-info btn-xs">Rename</a>
	 <a href="/projetsymfo/web/app_dev.php/projet/deleteroom/{{room.id}}" class="btn btn-danger btn-xs ">Delete</a></h2>
	<table class="table table-striped"> 
	<thead> 
		<tr> 
		<th><font size="4">Machine Name</font></th>
		<th><font size="4">Machine IP</font></th> 
		<th><font size="4">Creator</font></th>  
		<th><font size="4">State</font></th>
		<th><font size="4">Ping</font></th>



		<th></th>
		</tr> 
	</thead> 
	
	 <tbody> 

		 {% for machine in machines if machine.room == room.id %}

		 <tr> 
		 <td>{{machine.name}}</td> 
		 <td>{{machine.ip}}</td> 
		 <td>{{machine.user}}</td>  
		 <td>{% if machine.state == 0 %}<strong>Off</strong>{% else %}<strong>On</strong>{% endif %}</td>
		 <td>{% if machine.ping == 0 %}<strong>Not OK</strong>{% else %}<strong>OK</strong>{% endif %}</td>
		 <td>
		 <a href="/projetsymfo/web/app_dev.php/projet/details/{{machine.id}}" class="btn btn-success">View</a>
		 <a href="/projetsymfo/web/app_dev.php/projet/edit/{{machine.id}}" class="btn btn-default">Edit</a>
		 <a href="/projetsymfo/web/app_dev.php/projet/delete/{{machine.id}}" class="btn btn-danger">Delete</a>
		 <a href="/projetsymfo/web/app_dev.php/projet/status/{{machine.id}}" class="btn btn-warning btn-xs">On/Off</a>
		 <a href="/projetsymfo/web/app_dev.php/projet/ping/{{machine.id}}" class="btn btn-info btn-sm">Ping</a>
	  
		 </td>
		 </tr>  
		 {% endfor %}
	 </tbody> 
	 </table>
	{% endfor %} 
{% endblock %}